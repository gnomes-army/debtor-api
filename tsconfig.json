{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "~src/*": ["src/*"],
      "~app/*": ["src/app/*"],
      "~core/*": ["src/app/core/*"],
      "~helpers/*": ["src/app/core/helpers/*"],
      "~modules/*": ["src/app/modules/*"],
      "~shared/*": ["src/app/shared/*"],
    }
  }
}
